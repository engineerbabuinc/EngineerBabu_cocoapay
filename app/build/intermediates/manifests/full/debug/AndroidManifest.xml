            android:name="com.firebug.cocoapay.HomeScreen"
            android:label="Tabs/Default"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.firebug.cocoapay.AddProductActivity"
            android:windowSoftInputMode="adjustPan" >
        </activity>
