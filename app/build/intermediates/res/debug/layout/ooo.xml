<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cocoapay="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

   

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="1"
                android:textSize="25sp" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="65dp"
                android:background="@android:color/black" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="2"
                android:textSize="25sp" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="65dp"
                android:background="@android:color/black" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="3"
                android:textSize="25sp" />
        </LinearLayout>

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v1"
            android:orientation="horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="4"
                android:textSize="25sp" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="65dp"
                android:background="@android:color/black" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="5"
                android:textSize="25sp" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="65dp"
                android:background="@android:color/black" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="6"
                android:textSize="25sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/l2"
            android:orientation="horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="6"
                android:textSize="25sp" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="65dp"
                android:background="@android:color/black" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="8"
                android:textSize="25sp" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="65dp"
                android:background="@android:color/black" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="9"
                android:textSize="25sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/l3"
            android:orientation="horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="Clear"
                android:textSize="25sp" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="65dp"
                android:background="@android:color/black" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="0"
                android:textSize="25sp" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="65dp"
                android:background="@android:color/black" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="Add"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_above="@id/footer"
        android:background="@android:color/black" />
    
      <LinearLayout
          android:id="@+id/cardlyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_bottom"
        android:orientation="vertical" >

        <View
            android:id="@+id/view_one"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/swipecard"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/view_one"
            android:gravity="center_vertical|center_horizontal"
            android:text="Swipe card when ready"
            android:textSize="20sp" />
    </LinearLayout>
    
          <RelativeLayout
        android:id="@+id/search_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cardlyt" >

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp" >

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:background="@android:drawable/ic_lock_idle_alarm" />

            <Button
                android:id="@+id/btnLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:background="@android:drawable/ic_search_category_default" />

            <EditText
                android:id="@+id/edSearch"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/btnSearch"
                android:layout_toRightOf="@id/btnLeft"
                android:background="@null"
                android:hint="Search"
                android:imeOptions="actionSearch"
                android:singleLine="true" />
        </RelativeLayout>
</RelativeLayout>

          <LinearLayout
       android:layout_above="@id/search_lyt"
        android:id="@+id/charge_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <com.firebug.cocoapay.MyTextView
                android:id="@+id/charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charge"
                android:textSize="20sp"
                cocoapay:fontName="avenir.ttf" >
            </com.firebug.cocoapay.MyTextView>

            <com.firebug.cocoapay.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical"
                android:text=" ( Indcluding Tax )"
                android:textSize="12sp"
                cocoapay:fontName="avenir.ttf" >
            </com.firebug.cocoapay.MyTextView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:text="Charge"
            android:textSize="35sp" />
    </LinearLayout>
</RelativeLayout><!-- From: file:/F:/Android%20Studio/cocoapay-android-app-master/app/src/main/res/layout/ooo.xml -->