<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cocoapay="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >
    
       <LinearLayout
        android:id="@+id/ll_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="vertical" >

        <com.firebug.cocoapay.MyButtonView
            android:id="@+id/signupthree"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/signin_btn_bg"
            android:text="Next"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            cocoapay:fontName="avenir.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_footer"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <RelativeLayout 
                android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/ll_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:background="@color/blue"
                android:orientation="vertical" >

                <com.firebug.cocoapay.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:text="Bank Details"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    cocoapay:fontName="avenir.ttf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_one"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical" >

                <com.firebug.cocoapay.MyEditTextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_design"
                    android:hint="Name of Bank"
                    android:singleLine="true"
                    android:textSize="20sp"
                    cocoapay:fontName="avenir.ttf" />

                <com.firebug.cocoapay.MyEditTextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_design"
                    android:hint="Bank Account Number"
                    android:singleLine="true"
                    android:textSize="20sp"
                    cocoapay:fontName="avenir.ttf" />

                <com.firebug.cocoapay.MyEditTextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_design"
                    android:hint="Branch IFSC Code"
                    android:singleLine="true"
                    android:textSize="20sp"
                    cocoapay:fontName="avenir.ttf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_two"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:background="@color/blue"
                android:orientation="vertical" >

                <com.firebug.cocoapay.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:text="Beneficiary Details"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    cocoapay:fontName="avenir.ttf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_three"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical" >

                <com.firebug.cocoapay.MyEditTextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_design"
                    android:hint="Beneficiary Name"
                    android:singleLine="true"
                    android:textSize="20sp"
                    cocoapay:fontName="avenir.ttf" />

                <com.firebug.cocoapay.MyEditTextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_design"
                    android:hint="Beneficiary Address Line 1"
                    android:singleLine="true"
                    android:textSize="20sp"
                    cocoapay:fontName="avenir.ttf" />

                <com.firebug.cocoapay.MyEditTextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_design"
                    android:hint="Beneficiary Address Line 2"
                    android:singleLine="true"
                    android:textSize="20sp"
                    cocoapay:fontName="avenir.ttf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/signup_bg"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <com.firebug.cocoapay.MyEditTextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_design"
                        android:hint="City"
                        android:singleLine="true"
                        cocoapay:fontName="avenir.ttf" >
                    </com.firebug.cocoapay.MyEditTextView>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="1dp" />

                    <com.firebug.cocoapay.MyEditTextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_design"
                        android:hint="State"
                        android:singleLine="true"
                        cocoapay:fontName="avenir.ttf" >
                    </com.firebug.cocoapay.MyEditTextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/signup_bg"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <com.firebug.cocoapay.MyEditTextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_design"
                        android:hint="ZIP Code"
                        android:singleLine="true"
                        cocoapay:fontName="avenir.ttf" >
                    </com.firebug.cocoapay.MyEditTextView>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:visibility="invisible" >
                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/signup_bg"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <com.firebug.cocoapay.MyEditTextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_design"
                        android:hint="Email"
                        android:singleLine="true"
                        cocoapay:fontName="avenir.ttf" >
                    </com.firebug.cocoapay.MyEditTextView>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="1dp" />

                    <com.firebug.cocoapay.MyEditTextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_design"
                        android:hint="Phone Number"
                        android:singleLine="true"
                        cocoapay:fontName="avenir.ttf" >
                    </com.firebug.cocoapay.MyEditTextView>
                </LinearLayout>
            </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

 

</RelativeLayout><!-- From: file:/F:/Android%20Studio/cocoapay-android-app-master/app/src/main/res/layout/sign_up_three.xml -->