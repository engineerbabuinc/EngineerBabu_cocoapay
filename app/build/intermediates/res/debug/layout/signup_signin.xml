<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cocoapay="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical" >

        <com.firebug.cocoapay.MyButtonView
            android:id="@+id/signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/signin_btn_bg"
            android:text="Sign Up"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            cocoapay:fontName="avenir.ttf" />

        <com.firebug.cocoapay.MyButtonView
                        android:id="@+id/signin_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/signin_btn_bg"
            android:text="Sign In"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            cocoapay:fontName="avenir.ttf" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/F:/Android%20Studio/cocoapay-android-app-master/app/src/main/res/layout/signup_signin.xml -->