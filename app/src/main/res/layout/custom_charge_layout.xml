<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cocoapay="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:fitsSystemWindows="true" >

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.firebug.cocoapay.MyButtonView cocoapay:fontName="avenir.ttf"
                android:layout_width="wrap_content"
                 android:layout_height="@dimen/number_btn_height"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="1"
                android:textColor="@color/number_color"
                android:textSize="25sp"
                 />

            <View
                android:layout_width="0.2dp"
                 android:layout_height="@dimen/number_btn_height"
                android:background="@color/line_color" />

            <com.firebug.cocoapay.MyButtonView
                android:layout_width="wrap_content"
                 android:layout_height="@dimen/number_btn_height"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="2"
                android:textColor="@color/number_color"
                android:textSize="25sp"
                cocoapay:fontName="avenir.ttf" />

            <View
                android:layout_width="0.2dp"
                 android:layout_height="@dimen/number_btn_height"
             
                android:background="@color/line_color" />

            <com.firebug.cocoapay.MyButtonView
                android:layout_width="wrap_content"
                 android:layout_height="@dimen/number_btn_height"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="3"
                android:textColor="@color/number_color"
                android:textSize="25sp"
                cocoapay:fontName="avenir.ttf" />
        </LinearLayout>

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v1"
            android:orientation="horizontal" >

            <com.firebug.cocoapay.MyButtonView
                android:layout_width="wrap_content"
                 android:layout_height="@dimen/number_btn_height"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="4"
                android:textColor="@color/number_color"
                android:textSize="25sp"
                cocoapay:fontName="avenir.ttf" />

            <View
                android:layout_width="0.2dp"
                 android:layout_height="@dimen/number_btn_height"
                android:background="@color/line_color" />

            <com.firebug.cocoapay.MyButtonView
                android:layout_width="wrap_content"
                 android:layout_height="@dimen/number_btn_height"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="5"
                android:textColor="@color/number_color"
                android:textSize="25sp"
                cocoapay:fontName="avenir.ttf" />

            <View
                android:layout_width="0.2dp"
                 android:layout_height="@dimen/number_btn_height"
                android:background="@color/line_color" />

            <com.firebug.cocoapay.MyButtonView
                android:layout_width="wrap_content"
                 android:layout_height="@dimen/number_btn_height"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="6"
                android:textColor="@color/number_color"
                android:textSize="25sp"
                cocoapay:fontName="avenir.ttf" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/l2"
            android:orientation="horizontal" >

            <com.firebug.cocoapay.MyButtonView
                cocoapay:fontName="avenir.ttf" 
                android:layout_width="wrap_content"
                 android:layout_height="@dimen/number_btn_height"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="6"
                android:textColor="@color/number_color"
                android:textSize="25sp"
                />

            <View
                android:layout_width="0.2dp"
                 android:layout_height="@dimen/number_btn_height"
                android:background="@color/line_color" />

            <com.firebug.cocoapay.MyButtonView
                android:layout_width="wrap_content"
                 android:layout_height="@dimen/number_btn_height"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="8"
                android:textColor="@color/number_color"
                android:textSize="25sp"
                cocoapay:fontName="avenir.ttf" />

            <View
                android:layout_width="0.2dp"
                 android:layout_height="@dimen/number_btn_height"
                android:background="@color/line_color" />

            <com.firebug.cocoapay.MyButtonView
                android:layout_width="wrap_content"
                 android:layout_height="@dimen/number_btn_height"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="9"
                android:textColor="@color/number_color"
                android:textSize="25sp"
                cocoapay:fontName="avenir.ttf" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/l3"
            android:orientation="horizontal" >

            <com.firebug.cocoapay.MyButtonView
                android:layout_width="0dp"
                 android:layout_height="@dimen/number_btn_height"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="Clear"
                android:textColor="@color/blue"
                android:textSize="25sp"
                android:textStyle="bold"
                cocoapay:fontName="avenir.ttf" />

            <View
                android:layout_width="0.2dp"
                 android:layout_height="@dimen/number_btn_height"
                android:background="@color/line_color" />

            <com.firebug.cocoapay.MyButtonView
                android:layout_width="0dp"
                 android:layout_height="@dimen/number_btn_height"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="0"
                android:textColor="@color/number_color"
                android:textSize="25sp"
                cocoapay:fontName="avenir.ttf" />

            <View
                android:layout_width="0.2dp"
                 android:layout_height="@dimen/number_btn_height"
                android:background="@color/line_color" />

            <com.firebug.cocoapay.MyButtonView
                android:layout_width="0dp"
                 android:layout_height="@dimen/number_btn_height"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="Add"
                android:textColor="@color/blue"
                android:textSize="25sp"
                android:textStyle="bold"
                cocoapay:fontName="avenir.ttf" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer"
        android:background="@android:color/white"
        android:orientation="vertical" >
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@android:color/white"/>

        <LinearLayout
            android:id="@+id/charge_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/blue"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <com.firebug.cocoapay.MyTextView cocoapay:fontName="avenir.ttf"
                    
                    android:id="@+id/charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Charge"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                     >
                </com.firebug.cocoapay.MyTextView>

                <com.firebug.cocoapay.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical"
                    android:text=" ( Including Tax )"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    cocoapay:fontName="avenir.ttf" >
                </com.firebug.cocoapay.MyTextView>
            </LinearLayout>

            <com.firebug.cocoapay.MyTextView cocoapay:fontName="avenir.ttf" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:text="Charge"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                >
            </com.firebug.cocoapay.MyTextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardlyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:id="@+id/view_one"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color" />

            <com.firebug.cocoapay.MyTextView
                android:id="@+id/swipecard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/view_one"
                android:gravity="center_vertical|center_horizontal"
                android:text="Swipe card when ready"
                android:textColor="@color/blue"
                android:textSize="20sp"
                cocoapay:fontName="avenir.ttf" >
            </com.firebug.cocoapay.MyTextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/line_color" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp" >

            <com.firebug.cocoapay.MyTextView
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:text="Rs 100"
                android:textColor="@color/number_color"
                cocoapay:fontName="avenir.ttf" >
            </com.firebug.cocoapay.MyTextView>

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/btnLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:src="@drawable/description"
                android:textColor="@color/number_color"
              ></ImageView>

            <com.firebug.cocoapay.MyEditTextView cocoapay:fontName="avenir.ttf" 
                android:inputType="textFilter"
                android:layout_marginLeft="5dp"
                android:id="@+id/edSearch"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/btnSearch"
                android:layout_toRightOf="@id/btnLeft"
                android:background="@null"
                android:focusableInTouchMode="true"
                android:hint="Description"
                android:singleLine="true"
                android:textColor="@color/number_color"
                >
            </com.firebug.cocoapay.MyEditTextView>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>